{% from "_Card.html.twig" import Card %}
{% from "_Heading.html.twig" import Heading %}
{% from "_Text.html.twig" import Text %}

<section>
  {{ Heading({
    content: data.articles.heading,
    tag: "h2",
  }) }}

  {% if data.articles.summary|length %}
    <div class="mt-8">
      {{ Text({ content: data.articles.summary }) }}
    </div>
  {% endif %}
  
  <div class="gap-6 grid grid-cols-12 mt-8">
    {% for card in data.articles.posts %}
      <div class="col-span-full lg:col-span-4 sm:col-span-6 xl:col-span-3">
        {{ Card(card) }}
      </div>
    {% endfor %}
  </div>
</section>