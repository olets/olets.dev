{% extends "_layout.html.twig" %}

{% from "_Card.html.twig" import Card %}

{% block content %}
  {% set cards = [
    {
      description: "Auto-expanding abbreviations for zsh",
      imgSrc: "https://olets.imgix.net/zsh-abbr.jpg",
      link: "https://github.com/olets/zsh-abbr",
      title: "zsh-abbr",
    },
    {
      description: "",
      imgSrc: "https://olets.imgix.net/git-replay.jpg",
      link: "https://github.com/olets/git-replay",
      title: "git-replay",
    },
    {
      description: "",
      imgSrc: "https://olets.imgix.net/hometown.jpg",
      link: "https://github.com/olets/hometown-prompt",
      title: "Hometown Prompt",
    },
    {
      description: "",
      imgSrc: "https://olets.imgix.net/git-prompt-kit.jpg",
      link: "https://github.com/olets/git-prompt-kit",
      title: "Git Prompt Kit",
    },
    {
      description: "",
      imgSrc: "https://olets.imgix.net/zsh-test-runner.jpg",
      link: "https://github.com/olets/zsh-test-runner",
      title: "zsh-test-runner",
    },
  ] %}

  <ul class="gap-8 grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
    <li aria-role="presentation" class="col-span-2">
      <h1 class="font-serif text-9xl">
        olets.dev
      </h1>
    </li>

    {% for card in cards %}
      <li class="relative">
        {{ Card(card)}}
      </li>
    {% endfor %}
  </ul>
{% endblock %}