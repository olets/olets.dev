{% from "Card.njk" import Card %}
{# {% from "Text.njk" import Text %} #}

<div>
  <div class="flex justify-between">
    <h2 class="heading-2">{{ openSource.heading }}</h2>

    <div>{{ openSource.details }}</div>
  </div>

  {% if openSource.summary|length %}
    <div class="mt-8">
      {# {{ Text({
        content: openSource.summary,
      }) }} #}
    </div>
  {% endif %}
  
  <div class="sm:grid-cols-2 md:grid-cols-3 xl:grid-cols-2 gap-12 grid mt-8">
    {% for card in openSource.items %}
      <div>
        {{ Card(card) }}
      </div>
    {% endfor %}
  </div>
</div>